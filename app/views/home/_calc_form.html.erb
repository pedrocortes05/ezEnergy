<div class="container">
<%= form_with model: @calc, url: new_calc_path(), method: :post do |form| %>
	<div class="mt-5">
		<h4>Calcular uso de paneles solares</h4>
    <div class="field my-3">
      <h5 style="color:#777777;">Gasto diario</h5>
			<div class="input-group mb-3">
      <%= form.text_field :waste, class:"form-control w3_form", value: @waste %>
			<span class="input-group-text">kWh</span>
			</div>
    </div>
    <div class="field mb-3">
      <h5 style="color:#777777;">Porcentaje de eficiencia (Obtenido en la simulaci√≥n)</h5>
			<div class="input-group mb-3">
				<%= form.text_field :eff, class:"form-control w3_form" %>
				<span class="input-group-text">%</span>
			</div>
    </div>
    <div class="field mb-3">
      <h5 style="color:#777777;">Precio del panel solar que desea utilizar</h5>
			<div class="input-group mb-3">
				<%= form.text_field :price, class:"form-control w3_form" %>
				<span class="input-group-text">%</span>
			</div>
    </div>
    <div class="field mb-3">
      <h5 style="color:#777777;">Energia maxima que puede generar un panel solar</h5>
			<div class="input-group mb-3">
				<%= form.text_field :watts, class:"form-control w3_form" %>
				<span class="input-group-text">kWh</span>
			</div>
    </div>
	</div>
	<div class="d-flex" style="margin-top: 12px">
		<div class="d-flex justify-content-start">
			<%= form.submit "Calcular", class:"btn btn-primary", style:"border-radius: 24px;border-width: 0px; box-shadow: 0px 10px 30px rgba(0,0,0,0.2);" %>
		</div>
	</div>
<% end %>
</div>